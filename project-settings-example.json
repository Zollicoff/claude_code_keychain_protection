{
  "permissions": {
    "deny": [
      "Bash(security)",
      "Bash(security *)",
      "Bash(*security*)",
      "Bash(*keychain*)",
      "Bash(*password*)",
      "Bash(*credential*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/path/to/your/project/.claude/hooks/security-filter.py"
          }
        ]
      }
    ]
  }
}